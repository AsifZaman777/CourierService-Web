@model CourierService_Web.Models.Area

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    string AdminId = Context.Request.Cookies["AdminId"];
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row mt-5 justify-content-center align-content-center">
                <div class="col-lg-6">
                    <div>
                        <h4 class="header-title">Create a New Area</h4>

                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name" for="Name">Name<span class="text-danger">*</span></label>
                                <input asp-for="Name" type="text" name="Name" parsley-trigger="change" required
                                       placeholder="Enter Name" class="form-control" id="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="DistrictId">Select District<span class="text-danger">*</span></label>
                                <select name="DistrictId" class="form-control">
                                    @foreach (var district in ViewBag.Districts)
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                            </div>
                            <br />

                            <div class="form-group">
                                <label for="ZoneId">Select Zone<span class="text-danger">*</span></label>
                                <select name="ZoneId" class="form-control">
                                    @foreach (var zone in ViewBag.Zones)
                                    {
                                        <option value="@zone.Id">@zone.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="HubId" for="HubId">Hub</label>
                                <select asp-for="HubId" class="form-control">
                                    @foreach (var hub in ViewBag.Hubs)
                                    {
                                        <option value="@hub.Id">@hub.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="HubId" class="text-danger"></span>
                            </div>

                            <div class="form-group text-right mb-0">
                                <button asp-controller="Admin" asp-action="CreateArea" class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                    Create Area
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect">
                                    Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
</div>

@section Scripts {
    @* @{
        <partial name="_ValidationScriptsPartial" />
    } *@
}
