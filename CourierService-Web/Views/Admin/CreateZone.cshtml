@model CourierService_Web.Models.Zone

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    string AdminId = Context.Request.Cookies["AdminId"];
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row mt-5 justify-content-center align-content-center">
                <div class="col-lg-6">
                    <div>
                        <h4 class="header-title">Create a New Zone</h4>

                        <form asp-action="CreateZone" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Zone Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group asp-validation-for="DistrictId">
                                <label asp-for="DistrictId">District</label>
                                <select asp-for="DistrictId" id="DistrictId" class="form-control" asp-items="@(new SelectList(ViewBag.Districts, "Id", "Name"))">
                                    <option value="">-- Select District --</option>
                                </select>
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                            <button type="submit" class="btn btn-primary">Create Zone</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
