@model Merchant

@{
    ViewData["Title"] = "Edit Merchant";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-box">
                        <h4 class="header-title">Edit Merchant</h4>

                        <form method="post" enctype="multipart/form-data">
                            
                            <input asp-for="Id" type="hidden" />
                            <input type="hidden" asp-for="Password" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <div class="form-group">
                                <label asp-for="CompanyName">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FullAddress">Full Address</label>
                                <input asp-for="FullAddress" class="form-control" />
                                <span asp-validation-for="FullAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyAddress">Company Address</label>
                                <input asp-for="CompanyAddress" class="form-control" />
                                <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="District">District</label>
                                <input asp-for="District" class="form-control" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Area">Area</label>
                                <input asp-for="Area" class="form-control" />
                                <span asp-validation-for="Area" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContactNumber">Contact Number</label>
                                <input asp-for="ContactNumber" class="form-control" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FacebookUrl">Facebook URL</label>
                                <input asp-for="FacebookUrl" class="form-control" />
                                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Website">Website</label>
                                <input asp-for="Website" class="form-control" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="NID">NID</label>
                                <input asp-for="NID" class="form-control" />
                                <span asp-validation-for="NID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TradeLicense">Trade License</label>
                                <input asp-for="TradeLicense" class="form-control" />
                                <span asp-validation-for="TradeLicense" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tin">TIN</label>
                                <input asp-for="Tin" class="form-control" />
                                <span asp-validation-for="Tin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InsideDhakaDeliveryCharge">Inside Dhaka Delivery Charge<span class="text-danger"></span></label>
                                <input asp-for="InsideDhakaDeliveryCharge" type="number" name="InsideDhakaDeliveryCharge" parsley-trigger="change"
                                       placeholder="Enter Inside Dhaka Delivery Charge" class="form-control" id="InsideDhakaDeliveryCharge">
                                <span asp-validation-for="InsideDhakaDeliveryCharge" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SubDhakaDeliveryCharge">Sub Dhaka Delivery Charge<span class="text-danger"></span></label>
                                <input asp-for="SubDhakaDeliveryCharge" type="number" name="SubDhakaDeliveryCharge" parsley-trigger="change"
                                       placeholder="Enter Sub Dhaka Delivery Charge" class="form-control" id="SubDhakaDeliveryCharge">
                                <span asp-validation-for="SubDhakaDeliveryCharge" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="OutsideDhakaDeliveryCharge">Outside Dhaka Delivery Charge<span class="text-danger"></span></label>
                                <input asp-for="OutsideDhakaDeliveryCharge" type="number" name="OutsideDhakaDeliveryCharge" parsley-trigger="change"
                                       placeholder="Enter Outside DhakaDelivery Charge" class="form-control" id="OutsideDhakaDeliveryCharge">
                                <span asp-validation-for="OutsideDhakaDeliveryCharge" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="InDhakaEmergencyDeliveryCharge">InDhaka Emergency Delivery Charge<span class="text-danger"></span></label>
                                <input asp-for="InDhakaEmergencyDeliveryCharge" type="number" name="InDhakaEmergencyDeliveryCharge" parsley-trigger="change"
                                       placeholder="Enter In Dhaka Emergency DeliveryCharge" class="form-control" id="InDhakaEmergencyDeliveryCharge">
                                <span asp-validation-for="InDhakaEmergencyDeliveryCharge" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="P2PDeliveryCharge">P2P Delivery Charge<span class="text-danger"></span></label>
                                <input asp-for="P2PDeliveryCharge" type="number" name="P2PDeliveryCharge" parsley-trigger="change"
                                       placeholder="Enter P2P Delivery Charge" class="form-control" id="P2PDeliveryCharge">
                                <span asp-validation-for="P2PDeliveryCharge" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MaxiumWeight">Max Weight (KG)<span class="text-danger"></span></label>
                                <input asp-for="MaxiumWeight" type="number" name="MaxiumWeight" parsley-trigger="change"
                                       placeholder="Enter Maxium Weight" class="form-control" id="MaxiumWeight">
                                <span asp-validation-for="MaxiumWeight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ExtraWeightCharge">Extra Weight Charge (TK)<span class="text-danger"></span></label>
                                <input asp-for="ExtraWeightCharge" type="number" name="ExtraWeightCharge" parsley-trigger="change"
                                       placeholder="Enter Extra Weight Charge" class="form-control" id="ExtraWeightCharge">
                                <span asp-validation-for="P2PDeliveryCharge" class="text-danger"></span>
                            </div>


                            @* <div class="form-group">
                                <label for="imageUrl">Image</label>
                                <input type="file" name="file" parsley-trigger="change"
                                       placeholder="Enter image URL" class="form-control" id="imageUrl">


                            </div> *@
                            @* <div class="col-2">
                                <img src="@Model.ImageUrl" style=" width:100%; border-radius:5px; border:1px solid #bbb9b9" />
                            </div> *@
                            <button asp-action="EditMerchant" asp-controller="Admin" type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Merchant" class="btn btn-secondary">Back To List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
