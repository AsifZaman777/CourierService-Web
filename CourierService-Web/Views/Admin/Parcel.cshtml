                    else {
                        $('#bulkAssignBtnModal').prop('disabled', false);
                    }

                    html += '<div><strong>Rider:</strong> ' + parcel.rider + '</div>';

                    html += '<hr>';
                }
                $('#selectedParcelsList').html(html);
