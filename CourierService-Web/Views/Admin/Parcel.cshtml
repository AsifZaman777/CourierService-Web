@model IEnumerable<Parcel>

@{
    ViewData["Title"] = "Parcel";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@{
    string AdminEmail = Context.Request.Cookies["AdminEmail"];
}

<!-- Style for the barcode -->
<style>
    .barcode {
        text-align: center;
        margin-top: 10px;
    }

        .barcode canvas {
            width: 200px;
        }

    .print-container {
        width: 100%;
        max-width: 800px; /* Adjust according to your layout */
        margin: 0 auto;
    }
</style>
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">

                @using (Html.BeginForm("Parcel", "Admin", FormMethod.Get))
                {
                    <div class="form-row justify-content-center">
                        <!-- Date range selector -->
                        <div class="form-group col-md-5 mt-2">
                            <label for="startDate">Start Date:</label>
                            <input type="date" id="startDate" name="startDate" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-5 mt-2">
                            <label for="endDate">End Date:</label>
                            <input type="date" id="endDate" name="endDate" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-2 mt-4">
                            <button type="submit" class="btn btn-success btn-md">Filter</button>
                        </div>
                    </div>
                }


                <div class="col-lg-12">
                    <div class="col-lg-3">
                        <label for="statusFilter">Parcel Status:</label>
                        <select id="statusFilter" class="form-control">
                            <option value="">All</option>
                            <option value="Pending">Pending</option>
                            <option value="Pickup Requested">Pickup Requested</option>
                            <option value="Assigned A Rider For Pickup">Assigned A Rider For Pickup</option>
                            <option value="Picked Up">Picked Up</option>
                            <option value="Pickup Failed">Pickup Failed</option>
                            <option value="Pickup Cancelled">Pickup Cancelled</option>
                            <option value="Pickup On Hold">Pickup On Hold</option>
                            <option value="At The Hub Received">At The Hub Received</option>
                            <option value="On The Way To Sorting Hub">On The Way To Sorting Hub</option>
                            <option value="At The Sorting Hub">At The Sorting Hub</option>
                            <option value="On The Way To Last Mile Hub">On The Way To Last Mile Hub</option>
                            <option value="Received At Last Mile Hub">Received At Last Mile Hub</option>
                            <option value="Delivery Rider Assigned">Delivery Rider Assigned</option>
                            <option value="On The Way">On The Way</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Delivery Failed">Delivery Failed</option>
                            <option value="Damaged">Damaged</option>
                            <option value="Delivery On Hold">Delivery On Hold</option>
                            <option value="Returned">Returned</option>
                            <option value="Return Create First Mile Hub">Return Create First Mile Hub</option>
                            <option value="Return On The Way To Sorting Hub">Return On The Way To Sorting Hub</option>
                            <option value="Return Received By Sorting Hub">Return Received By Sorting Hub</option>
                            <option value="Return On The Way To First Mile Hub">Return On The Way To First Mile Hub</option>
                            <option value="Return Received By First Mile Hub">Return Received By First Mile Hub</option>
                            <option value="Return Assigned Pickup Agent">Return Assigned Pickup Agent</option>
                            <option value="Return On The Way To Merchant">Return On The Way To Merchant</option>
                            <option value="Return Received By Merchant">Return Received By Merchant</option>
                            
                            <!-- Add more options as needed -->
                        </select>
                    </div>
                    <div class="d-flex justify-content-end mb-2">
                        <a href="@Url.Action("DownloadCsv", "Admin", new { startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })" class="btn btn-info btn-md">
                            <i class="fas fa-download mr-1"></i>
                            Download CSV
                        </a>
                    </div> 
                    <div class="d-flex justify-content-start mb-2">
                        <a href="@Url.Action("AddNewParcel", "Admin")" class="btn btn-success btn-md">
                            <i class="fas fa-box mr-1"></i>
                            Create New Parcel
                        </a>
                    </div>

                    <div class="card-box">
                        <h4 class="header-title text-success ">Total Parcel: @Model.Count()</h4>
                       


                        <div class="row">
                            <div class="col-lg-9"></div> 
                            <div class="col-lg-3">
                                <input type="text" id="searchInput" class="form-control mb-2" placeholder="Search...">
                            </div>
                        </div>


                        <div class="table-responsive" id="parcelTable" style="overflow-x: auto;">
                            <form id="bulkActionForm" method="post" action="">
                                <div>
                                    <button type="button" class="btn btn-sm btn-secondary" id="bulkAssignModalBtn" data-toggle="modal" data-target="#bulkAssignModal">
                                        Assign Pickup Rider 
                                    </button>

                                    <!-- Bulk Assign Modal -->
                                    <div class="modal fade" id="bulkAssignModal" tabindex="-1" role="dialog" aria-labelledby="bulkAssignModalLabel" aria-hidden="true">
                                        <form id="bulkAssignForm" method="post" action="@Url.Action("BulkAssignParcel", "Admin")">
                                            @* Hidden input fields to store riderId and parcelIds *@
                                            <input type="hidden" id="riderIdHidden" name="riderId" />
                                            <input type="hidden" id="parcelIdsHidden" name="parcelIds" />

                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="bulkAssignModalLabel">Bulk Assign Parcels</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h5>Parcel Information</h5>
                                                        <div id="selectedParcelsList"></div> <!-- Display selected parcels here -->
                                                        <div class="form-group">
                                                            <label for="riderIdModal">Select Rider:</label>
                                                            <select class="form-control" id="riderIdModal" name="riderIdModal">
                                                                <option value="">-- Select Rider --</option>
                                                                @foreach (var rider in ViewBag.Riders)
                                                                {
                                                                    <option value="@rider.Id">@rider.Name</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary" id="bulkAssignBtnModal">Assign Pickup Rider</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>


                                    <!-- Assign Delivery Rider Button -->
                                   

                                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#bulkAssignDeliveryRiderModal"> Assign Delivery Rider</button>

                                    
                                    
                                    <!-- Assign Delivery Rider Modal -->
                                    <!-- Assign Delivery Rider Modal -->
                                    <div class="modal fade" id="bulkAssignDeliveryRiderModal" tabindex="-1" role="dialog" aria-labelledby="bulkAssignDeliveryRiderModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="bulkAssignDeliveryRiderModalLabel">Bulk Assign Delivery Rider</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <!-- Form for bulk assigning delivery rider -->
                                                    <h5>Parcel Information</h5>
                                                    <div id="bulkSelectedParcelsList"></div> <!-- Display selected parcels here -->
                                                    <form id="bulkAssignDeliveryRiderForm">
                                                        <div class="form-group">
                                                            <label for="bulkRiderModal">Select Rider:</label>
                                                            <select class="form-control" id="bulkRiderModal" name="bulkRiderModal">
                                                                <option value="">-- Select Rider --</option>
                                                                @foreach (var rider in ViewBag.Riders)
                                                                {
                                                                    <option value="@rider.Id">@rider.Name</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary" id="bulkAssignDeliveryRiderSubmitBtn">Assign Delivery Rider</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                    <button type="button" class="btn btn-sm btn-danger" id="bulkDeleteBtn">Delete</button>
                                </div>
                                <table class="table mb-0 mt-4" id="parcelTable">
                                <thead>
                                    <tr >
                                        <th>
                                            <input type="checkbox" id="selectAll" />
                                        </th>
                                        <th>SL</th>
                                            <th>Updated On</th>
                                        <th>ID</th>
                                            <th></th>
                                        <th>Merchant</th>
                                        <th>Rider</th>
                                       @*  <th>Pickup Location</th> *@
                                       @*  <th>Pickup Request Date</th> *@
                                        <th>Receiver Information</th>
                                       @*  <th>Product</th> *@
                                       @*  <th>Delivery</th> *@
                                        <th>Total Price</th>
                                        
                                        <th>Status</th>                       
                                        <th>Payment Status</th>
                                        
                                         
                                        @if(AdminEmail =="flyerbd@gmail.com")
                                        {
                                            <th>Action</th>
                                            <th>View</th>
                                            <th>Delete</th>
                                            
                                        }
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sl = 1;
                                    }
                                   
                                    @foreach (var parcel in Model.OrderByDescending(u=>u.PickupRequestDate))
                                    {

                                        <tr id="parcelTable_@parcel.Id">
                                            <td>
                                                <input type="checkbox" name="selectedParcels" value="@parcel.Id" class="checkbox" />
                                            </td>
                                            <td>@sl</td>
                                                @* <td>
                                                    <!-- Barcode placeholder -->
                                                    <svg class="barcode" data-id="@parcel.Id"></svg>
                                                </td> *@

                                                <td>
                                                    @(GetTimeAgo(parcel.PickupRequestDate))
                                                    <br />
                                                    Created : @(parcel.PickupRequestDate.HasValue ? parcel.PickupRequestDate.Value.ToString("g") : "N/A")
                                                </td>
                                            <td>@parcel.Id</td>
                                                <td>
                                                    <i class="fas fa-copy" onclick="copyToClipboard('@parcel.Id')" style="cursor: pointer;"></i>
                                                </td>

                                            <td>
                                                 @parcel.Merchant?.CompanyName

                                                @* <strong>Phone:</strong> @parcel.Merchant?.ContactNumber *@
                                            </td>
                                            @if (parcel.RiderId == null)
                                            {
                                                <td><span class="badge badge-danger text-medium">Not Assigned</span></td>
                                            }
                                            else
                                            {
                                               
                                                <td>
                                                    <strong>Name:</strong> @parcel.Rider?.Name <br />
                                                    <strong>Phone:</strong> @parcel.Rider?.ContactNumber
                                                </td>
                                            }
                                            @* <td>@parcel.PickupLocation</td> *@
                                            @* <td>@(parcel.PickupRequestDate?.Date.ToShortDateString())</td> *@
                                            <td>
                                                <strong>Name:</strong> @parcel.ReceiverName<br>
                                                <strong>Address:</strong> @parcel.ReceiverAddress<br>
                                                <strong>Contact:</strong> @parcel.ReceiverContactNumber
                                            </td>
                                           
                                         @*  <td>
                                                 <strong>Name:</strong> @parcel.ProductName <br />
                                                <strong>Weight:</strong> @parcel.ProductWeight KG <br />
                                                <strong>Price:</strong> @parcel.ProductPrice TK<br />
                                                <strong>Quantity:</strong> @parcel.ProductQuantity <br />
                                          </td> *@
                                            
                                          @* <td>
                                                <strong>Type:</strong> @parcel.DeliveryType <br />
                                                <strong>Charge:</strong> @parcel.DeliveryCharge TK <br />
                                          </td>  *@

                                           
                                            <td>@parcel.TotalPrice TK</td>

                                            


                                            @if (parcel.Status == "Pickup Request")
                                            {
                                                <td><span class="badge badge-success font-weight-bold">@parcel.Status</span></td>
                                            }
                                            else if (parcel.Status == "Dispatched")
                                            {
                                                <td><span class="badge badge-warning font-weight-bold">@parcel.Status</span></td>
                                            }
                                            else if (parcel.Status == "Transit")
                                            {
                                                <td><span class="badge badge-info text-medium">@parcel.Status</span></td>
                                            }
                                            else if (parcel.Status == "Delivered")
                                            {
                                                <td><span class="badge badge-success text-medium">@parcel.Status</span></td>
                                            }
                                            else if (parcel.Status == "Parcel Returned To Merchant")
                                            {
                                                <td><span class="badge badge-info text-medium">Return Parcel Arrived</span></td>
                                            }
                                            else if (parcel.Status == "Exchanged Parcel Returned Merchant")
                                            {
                                                <td><span class="badge badge-success text-medium">Exchange Parcel Arrived</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-info text-medium">@parcel.Status</span></td>
                                            }

                                            @if (parcel.PaymentStatus == "Paid To Merchant")
                                            {
                                                <td><span class="badge badge-success text-medium">Payment Received</span></td>
                                            }
                                            else if (parcel.PaymentStatus == "Paid Delivery Charge To Merchant")
                                            {
                                                <td><span class="badge badge-success text-medium">Delivery Charge Received</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-info text-medium">@parcel.PaymentStatus</span></td>
                                            }
                                            @* <td>
                                                @if (parcel.Status == "Parcel Returned To Merchant")
                                                {
                                                    <a asp-route-id="@parcel.Id" asp-controller="Merchant" asp-action="ReturnParcelReceived" class="btn btn-sm btn-success">
                                                        <i class="fas fa-check"></i> Return Parcel Received
                                                    </a>
                                                }
                                            </td> *@

                                            @if(AdminEmail == "flyerbd@gmail.com")
                                            {

                                                @if (parcel.Status == "Pending")
                                                {
                                                    <td>
                                                        <a asp-action="AcceptPickupRequest" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                            <i class="fas fa-check-circle"></i> Approve
                                                        </a>
                                                    </td>
                                                    

                                                }
                                                @*  @if (parcel.RiderId == null)
                                                {
                                                    <td>
                                                        <a asp-action="AssignParcelAdmin" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-warning">
                                                            <i class="fas fa-plus-circle"></i> Assign Pickup Rider

                                                        </a>

                                                    </td> 
                                                } *@

                                                else
                                                {
                                                    <td>

                                                        @if (parcel.Status == "Pickup Requested")
                                                        {
                                                            <a asp-action="AssignParcelAdmin" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-warning">
                                                                <i class="fas fa-plus-circle"></i> Assign Pickup Rider

                                                            </a>

                                                        }



                                                        @if (parcel.Status == "Picked Up")
                                                        {
                                                            <a asp-action="ParcelAtTheHubReceived" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                <i class="fas fa-plus-circle"></i> Hub Received

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "At The Hub Received")
                                                        {
                                                        
                                                            <a asp-action="OnTheWayToSortingHub" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                <i class="fas fa-truck"></i> On The Way To Sorting Hub
                                                            </a>


                                                        }

                                                        else if (parcel.Status == "On The Way To Sorting Hub")
                                                        {
                                                                <a class="btn btn-md btn-info print-btn" data-id="@parcel.Id">
                                                                    <i class="fas fa-print"></i> Print
                                                                </a>
                                                                <br />
                                                                <!-- Added padding to create space -->
                                                                <a asp-action="AtTheSortingHub" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info mt-2">
                                                                    <!-- Added "mt-2" class for margin-top -->
                                                                    <i class="fas fa-truck"></i> At The Sorting Hub
                                                                </a>

                                                        }
                                                       

                                                        else if (parcel.Status == "At The Sorting Hub")
                                                        {
                                                            <a asp-action="OnTheWayToLastMileHub" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                <i class="fas fa-truck"></i> On The Way To Last Mile Hub
                                                            </a>


                                                        }
                                                        
                                                        else if (parcel.Status == "On The Way To Last Mile Hub")
                                                        {
                                                            <a asp-action="ReceivedAtLastMileHub" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                <i class="fas fa-truck"></i> Received At Last Mile Hub
                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Received At Last Mile Hub")
                                                        {
                                                                <a asp-action="Damaged" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                    <i class="fas fa-plus-circle"></i> Damaged

                                                                </a>
                                                            <a asp-action="AssignDeliveryRiderAdmin" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                                <i class="fas fa-plus-circle"></i> Assign Delivery Rider

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Returned")
                                                        {
                                                            <a asp-action="ReturnCreateFirstMileHub" asp-controller="Admin" asp-route-id="@parcel.Id" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-plus-circle"></i> Return Create First Mile Hub

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Return Create First Mile Hub")
                                                        {
                                                            <a asp-action="ReturnOnTheWayToSortingHub" asp-controller="Admin" asp-route-id="@parcel.Id" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-plus-circle"></i> Return On The Way To Sorting Hub

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Return On The Way To Sorting Hub")
                                                        {
                                                            <a asp-action="ReturnReceivedBySortingHub" asp-controller="Admin" asp-route-id="@parcel.Id" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-plus-circle"></i> Return Received By Sorting Hub

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Return Received By Sorting Hub")
                                                        {
                                                            <a asp-action="ReturnOnTheWayToFirstMileHub" asp-controller="Admin" asp-route-id="@parcel.Id" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-plus-circle"></i> Return On The Way To First Mile Hub

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Return On The Way To First Mile Hub")
                                                        {
                                                            <a asp-action="ReturnReceivedByFirstMileHub" asp-controller="Admin" asp-route-id="@parcel.Id" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-plus-circle"></i> Return Received By First Mile Hub

                                                            </a>
                                                        }

                                                        else if (parcel.Status == "Return Received By First Mile Hub")
                                                        {
                                                            <a asp-action="AssignRiderToMerchant" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-success">
                                                                <i class="fas fa-plus-circle"></i> Assign Pickup Rider

                                                            </a>
                                                        }
                                                        else if (parcel.Status == "Exchanged" && parcel.PaymentStatus == "Delivery Charge Received By Rider")
                                                        {
                                                            <a asp-action="ExchangeParcelHub" asp-route-id="@parcel.Id" class="btn btn-sm btn-info">
                                                                <i class="fas fa-plus-circle"></i> Exchanged Parcel In Hub

                                                            </a>
                                                        }
                                                        else if (parcel.Status == "Exchange Parcel In Hub")
                                                        {
                                                            <a asp-action="RiderForExchange" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-success">
                                                                <i class="fas fa-plus-circle"></i> Rider For Exchange

                                                            </a>
                                                        }

                                                    </td>
                                                }
                                                @* else
                                                {
                                                  <td>
                                                    

                                                   @if (parcel.Status == "Parcel In Hub")
                                                    {
                                                        <a asp-action="AssignDeliveryRiderAdmin" asp-route-id="@parcel.Id" asp-controller="Admin" class="btn btn-sm btn-info">
                                                            <i class="fas fa-plus-circle"></i> Assign Delivery Rider

                                                        </a>
                                                    }



                                                 </td>
                                                } *@

                                        }

                                            <td>
                                                <!-- Button trigger modal -->
                                                <button class="btn btn-sm btn-primary waves-effect waves-light" data-toggle="modal" data-target="#viewModal_@parcel.Id">
                                                    <i class="fas fa-eye"></i>
                                                    View
                                                </button>

                                                <!-- Modal -->
                                                    <!-- Modal -->
                                                    <div id="viewModal_@parcel.Id" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="viewModalLabel"><i class="fas fa-box"></i> View Parcel Details</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <!-- Display parcel details here -->
                                                                    <h5 class="font-16"><i class="fas fa-barcode"></i> Parcel ID: @parcel.Id</h5>
                                                                    @* <p><strong><i class="fas fa-store"></i> Merchant Name:</strong> @parcel.Merchant?.Name</p>
                                                                <p><strong><i class="fas fa-phone"></i> Merchant Phone:</strong> @parcel.Merchant?.ContactNumber</p> *@

                                                                    <p><strong><i class="fas fa-box-open"></i> Product:</strong> @parcel.ProductName</p>
                                                                    <p><strong><i class="far fa-calendar-alt"></i> Parcel Created At:</strong> @(parcel.PickupRequestDate.HasValue ? parcel.PickupRequestDate.Value.ToString("g") : "N/A")</p>
                                                                    @if (parcel.UpdatedAt != null)
                                                                    {
                                                                        <p><strong><i class="far fa-calendar-alt"></i> Parcel Updated At:</strong> @(parcel.UpdatedAt.HasValue ? parcel.UpdatedAt.Value.ToString("g") : "N/A")</p>
                                                                    }
                                                                    @if (parcel.DispatchDate != null)
                                                                    {
                                                                        <p><strong><i class="fas fa-motorcycle"></i> Rider Assigned:</strong> @(parcel.DispatchDate.HasValue ? parcel.DispatchDate.Value.ToString("t") : "N/A")</p>
                                                                    }

                                                                    @if (parcel.PickedUpAt != null)
                                                                    {
                                                                        <p><strong><i class="fas fa-truck-loading"></i> Rider Pickedup:</strong> @(parcel.PickedUpAt.HasValue ? parcel.PickedUpAt.Value.ToString("t") : "N/A")</p>
                                                                    }
                                                                    @if (parcel.PickupFailedAt != null)
                                                                    {
                                                                        <p><strong><i class="fas fa-truck-loading"></i> Pickup Failed:</strong> @(parcel.PickupFailedAt.HasValue ? parcel.PickupFailedAt.Value.ToString("t") : "N/A")</p>
                                                                    }
                                                                    @if (parcel.PickupCancelledAt != null)
                                                                    {
                                                                        <p><strong><i class="fas fa-truck-loading"></i> Pickup Cancelled:</strong> @(parcel.PickupCancelledAt.HasValue ? parcel.PickupCancelledAt.Value.ToString("t") : "N/A")</p>
                                                                    }
                                                                    @if (parcel.PickupOnHoldAt != null)
                                                                    {
                                                                        <p><strong><i class="fas fa-truck-loading"></i> Pickup On Hold:</strong> @(parcel.PickupOnHoldAt.HasValue ? parcel.PickupOnHoldAt.Value.ToString("t") : "N/A")</p>
                                                                    }

