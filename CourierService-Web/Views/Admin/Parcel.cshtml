                // Display selected parcels information in the modal
                var html = '';
                for (var i = 0; i < selectedParcels.length; i++) {
                    var parcel = selectedParcels[i];
                    html += '<div><strong>Parcel ID:</strong> ' + parcel.id + '</div>';

                    //check if rider is not assigned..if there is rider information then disable button
                    if (parcel.rider != "Not Assigned") {
                        $('#bulkAssignBtnModal').prop('disabled', true);
