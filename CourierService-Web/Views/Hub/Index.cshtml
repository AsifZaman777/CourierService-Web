@{
    ViewData["Title"] = "Hub Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@{
    string HubEmail = Context.Request.Cookies["HubEmail"];
}

<!-- Start Page Content here -->

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Hub Dashboard</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <!-- Card boxes -->
            <div class="row justify-content-center">
                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-info d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Total Parcels</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TotalParcelCount</span></h3>
                        </div>
                        <i class="fas fa-boxes fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-warning d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Pending Parcels</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.PickupRequestCount</span></h3>
                        </div>
                        <i class="fas fa-clipboard-list fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Delivered Parcels</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.DeliveredParcelCount</span></h3>
                        </div>
                        <i class="fas fa-truck fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-warning d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Return Parcel</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ReturnParcelCount</span></h3>
                        </div>
                        <i class="fas fa-undo fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Parcel In Hub</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ParcelInHubCount</span></h3>
                        </div>
                        <i class="fas fa-box fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-primary d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Exchange Parcel</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ExchangeParcelCount</span></h3>
                        </div>
                        <i class="fas fa-exchange-alt fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-info d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Assigned For Pickup</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ParcelAssignedRiderForPickupCount</span></h3>
                        </div>
                        <i class="fas fa-truck-loading fa-3x text-black"></i>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-danger d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Assigned For Delivery</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ParcelAssignedForDeliveryCount</span></h3>
                        </div>
                        <i class="fas fa-truck fa-3x text-black"></i>
                    </div>
                </div>
            </div>
            <!-- End card boxes -->

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#receiveAmountModal">
                Receive Amount from Rider
            </button>

            <!-- Modal -->
            <div class="modal fade" id="receiveAmountModal" tabindex="-1" role="dialog" aria-labelledby="receiveAmountModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="receiveAmountModalLabel">Receive Amount from Rider</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="receiveAmountForm" method="post" action="@Url.Action("ReceiveAmount", "Hub")">
                                <div class="form-group">
                                    <label for="receivedAmount">Amount Received:</label>
                                    <input type="number" class="form-control" id="receivedAmount" name="amount" required>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" form="receiveAmountForm" class="btn btn-primary">Receive</button>
                        </div>
                    </div>
                </div>
            </div>


