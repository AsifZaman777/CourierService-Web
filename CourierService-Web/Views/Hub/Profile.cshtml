@model Hub

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card-box">
                        <h4 class="header-title">My Profile</h4>
                        <div class="col-lg-6">
                            <h5>Information</h5>
                            <p><strong>ID:</strong> @Model.Id</p>
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Full Address:</strong> @Model.Address</p>
                            <p><strong>Contact Number:</strong> @Model.PhoneNumber</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            
                        </div>
                        <hr>
                        <div>
                            <h5>Update Profile</h5>
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Password" />
                                <div class="form-group">
                                    <label asp-for="Name" for="Name">Name<span class="text-danger">*</span></label>
                                    <input asp-for="Name" type="text" name="Name" parsley-trigger="change" required
                                           placeholder="Enter Name" class="form-control" id="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" for="Address">Full Address<span class="text-danger">*</span></label>
                                    <input asp-for="Address" type="text" name="Address" parsley-trigger="change" required
                                           placeholder="Enter full address" class="form-control" id="Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" for="PhoneNumber">Contact Number<span class="text-danger">*</span></label>
                                    <input asp-for="PhoneNumber" type="text" name="PhoneNumber" parsley-trigger="change" required
                                           placeholder="Enter contact number" class="form-control" id="PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" for="Email">Email address<span class="text-danger">*</span></label>
                                    <input asp-for="Email" type="email" name="Email" parsley-trigger="change" required
                                           placeholder="Enter email" class="form-control" id="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group text-right mb-0">
                                    <button asp-controller="Hub" asp-action="UpdateProfile" class="btn btn-primary waves-effect waves-light mr-1" type="submit" disabled>
                                        Update
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
