@model List<CourierService_Web.Models.Store>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    string AdminId = Context.Request.Cookies["AdminId"];
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row mt-5 justify-content-center align-content-center">
                <div class="col-lg-12">
                    <div>
                        <h4 class="header-title">Store List</h4>
                        <a asp-controller="Merchant" asp-action="CreateStore" class="btn btn-primary mb-4 waves-effect waves-light float-right">
                            <i class="fas fa-plus-circle"></i>
                            Create New Store
                        </a>

                        @if (TempData["success"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["success"]
                            </div>
                        }

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Store ID</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                   @*  <th>Secondary Contact</th>
                                    <th>District</th>
                                    <th>Zone</th>
                                    <th>Area</th>
                                    <th>Hub</th> *@
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var store in Model)
                                {
                                    <tr>
                                        <td>@store.Id</td>
                                        <td>@store.Name</td>
                                        <td>@store.Contact</td>
                                        @* <td>@store.SecondaryContact</td>
                                        <td>@store.District.Name</td>
                                        <td>@store.Zone.Name</td>
                                        <td>@store.Area.Name</td>
                                        <td>@store.Hub.Name</td> *@
                                        <td>@store.Address</td>
                                        <td>
                                            <a href="@Url.Action("EditStore", new { id = store.Id })">Edit</a> |
                                            <a href="@Url.Action("DeleteStore", new { id = store.Id })" onclick="return confirm('Are you sure you want to delete this store?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
</div>

@section Scripts {
    @* Add any scripts here if needed *@
}
